<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_title_label"
        style="?android:listSeparatorTextViewStyle"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stock_title"
        android:hint="@string/stock_title_hint"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_details_label"
        style="?android:listSeparatorTextViewStyle"/>


    <Spinner android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/stock_spinner"
             android:entries="@array/weights_array"
             android:prompt="@string/select_prompt"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
        >
    </Spinner>



</LinearLayout>